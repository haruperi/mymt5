# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include SETUP_INSTRUCTIONS.md

# Include requirements
include requirements.txt
include requirements-dev.txt

# Include configuration examples
include config.ini.example
include *.ini.example

# Include docs
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt
recursive-include docs Makefile
recursive-include docs make.bat
recursive-include docs conf.py
include docs/*.md
include docs/*.rst

# Include examples
recursive-include examples *.py
recursive-include examples *.json.example
recursive-include examples *.ini.example

# Include tests
recursive-include tests *.py

# Include type stubs
recursive-include mymt5 py.typed
recursive-include mymt5 *.pyi

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude development files
exclude .gitignore
exclude .gitattributes
exclude .editorconfig
exclude .pre-commit-config.yaml
exclude pytest.ini
exclude .coveragerc
exclude tox.ini

# Exclude specific directories
prune .git
prune .github
prune .vscode
prune .idea
prune venv
prune env
prune build
prune dist
prune *.egg-info
prune __pycache__
prune .pytest_cache
prune .mypy_cache
prune htmlcov
prune logs
prune data

# Exclude Sphinx build
prune docs/_build
prune docs/_static
prune docs/_templates

